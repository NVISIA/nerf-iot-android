<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nvisia.nerfremote.MainActivity"
        android:background="@color/background">


        <ImageButton
                android:id="@+id/fire_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arcade_button_selector"
                android:layout_centerInParent="true"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRE"
                android:layout_above="@id/fire_button"
                android:layout_centerHorizontal="true"/>


        <Switch
                android:id="@+id/motor_switch"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn On Motor"
                android:layout_above="@id/motor_switch"
                android:layout_centerHorizontal="true"/>
</RelativeLayout>
